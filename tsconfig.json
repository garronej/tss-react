{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["es2015", "ES2019.Object", "DOM"],
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": false,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react",
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"],
    "exclude": ["src/test/apps", "src/bin"]
}
